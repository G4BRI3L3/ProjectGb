Utenti(UserID (PK), Username, Email, PasswordHash)
Ricette(RicettaID (PK), Name, Ingredients, Procedure, UserID (FK))
Commenti(CommentID (PK), UserID (FK), RicettaID (FK), Text, CreatedAt)
Valutazioni(RatingID (PK), RicettaID (FK), UserID (FK), Rating)
Preferiti(FavoriteID (PK), UserID (FK), RicettaID (FK))